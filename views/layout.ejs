<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>iToons</title>
    <% include ./partials/_stylesheets.ejs %>
  </head>
  <body>
    <header>
      <% include ./partials/_navbar %>
    </header>
    <section class="flash-message">
      <% for (const type in messages) { %>
        <p class="alert alert-<%= type %>"><%= messages[type] %></p>
      <% } %>
    </section>
    <main class="row">
      <div>
        <%- body %>
      </div>
    </main>
    <% include ./partials/_scripts.ejs %>
  </body>
</html>
